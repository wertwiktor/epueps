var current = "#lesson-" +<%= @current_video.lesson.id %>;

$(current).siblings().removeClass("active");
$(current).siblings().find("a").addClass("hidden");
$(current).addClass("active");
$(current).find("a").removeClass("hidden");


$(".lesson>.lesson-videos").hide();
$(".lesson.active>.lesson-videos").show();

$('.video').fadeOut("fast", function(){

	$(this).html("<%= j render partial: 'lessons/lesson_video', locals: {video: @current_video} %>");
	$(this).fadeIn();

});

$('.lesson-description').fadeOut("fast", function(){
	$(this).html("<%= j render partial: 'lessons/lesson_description', locals: {lesson: @current_lesson} %>");
	$(this).fadeIn();
});