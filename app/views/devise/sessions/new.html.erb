<% provide :title, "Zaloguj się" %>

<h1 class = "center">Zaloguj się</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "custom-form" } ) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, 
                required: false, 
                autofocus: true %>
    <%= f.input :password, 
                required: false,
                label: "Hasło" %>
    <%= f.input :remember_me, 
                label: "Pamiętaj mnie",
                as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zaloguj się",
                  class: "button button-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
